<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/body_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        tools:srcCompat="@drawable/head" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:text="-------------"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.383" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="260dp"
        android:layout_marginBottom="392dp"
        android:text="----"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/body_part" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="288dp"
        android:text="----"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="27dp"
        android:layout_height="22dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="308dp"
        android:text="---"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/body_part"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="442dp"
        android:text="--------"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/body_part"
        app:layout_constraintStart_toStartOf="@+id/body_part"
        app:layout_constraintTop_toTopOf="@+id/body_part"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/brain"
        android:layout_width="78dp"
        android:layout_height="41dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/custom_button"
        android:text="Brain"
        android:textColor="@color/theme_blue"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ear"
        android:layout_width="74dp"
        android:layout_height="40dp"
        android:layout_marginTop="268dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_button"
        android:text="Ear"
        android:textColor="@color/theme_blue"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eye"
        android:layout_width="71dp"
        android:layout_height="35dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_button"
        android:text="Eye"
        android:textColor="@color/theme_blue"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nose"
        android:layout_width="74dp"
        android:layout_height="33dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/custom_button"
        android:text="Nose"
        android:textColor="@color/theme_blue"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mouth"
        android:layout_width="84dp"
        android:layout_height="34dp"
        android:layout_marginTop="308dp"
        android:background="@drawable/custom_button"
        android:text="Mouth"
        android:textColor="@color/theme_blue"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="123dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Head"
        android:textColor="#7c76da"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>